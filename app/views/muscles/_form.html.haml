= form_for @muscle do |f|
  -if @muscle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@muscle.errors.count, "error")} prohibited this muscle from being saved:"
      %ul
        - @muscle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :latin_name
    = f.text_field :latin_name
  .actions
    = f.submit 'Save'
